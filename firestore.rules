rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Разрешить чтение станций для всех пользователей
    match /stations/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Разрешить чтение батарей для всех пользователей
    match /batteries/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Пользователи могут читать и писать только свои данные
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Разрешить чтение аналитики для авторизованных пользователей
    match /analytics/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}